    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "tmp",
        "logs",
        "backup"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js json"
}
